{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "noEmit": true,
    "typeRoots": ["./node_modules/@types", "types"],
    "baseUrl": ".",
    "paths": {
      "react-sweet-state": ["types"]
    }
  },
  "include": ["examples/**/*"]
}
